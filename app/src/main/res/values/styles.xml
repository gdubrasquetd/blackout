<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@drawable/background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:activityOpenEnterAnimation">@anim/begin_event_transition</item>
        <item name="android:activityOpenExitAnimation">@anim/end_event_transition</item>
        <item name="android:activityCloseEnterAnimation">@anim/begin_event_transition</item>
        <item name="android:activityCloseExitAnimation">@anim/end_event_transition</item>

    </style>

    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/begin_classic_transition
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/end_classic_transition
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/begin_classic_transition
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/end_classic_transition
        </item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">#9E9E9E</item>
    </style>


</resources>
